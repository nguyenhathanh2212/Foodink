<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="1dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="3dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/img_store"
                android:scaleType="centerCrop"/>
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cửa hàng: "
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textColor="@color/name"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/txt_name_store"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Trạng thái:  "
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:hyphenationFrequency="none" />
                    <TextView
                        android:id="@+id/txt_status"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:hyphenationFrequency="none" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Total: "
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:hyphenationFrequency="none" />
                <TextView
                    android:id="@+id/txt_price_total"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="20dp"
                    android:textColor="#ff0000"
                    android:textSize="13sp"
                    android:hyphenationFrequency="none" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Ship cost: "
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    android:hyphenationFrequency="none" />
                <TextView
                    android:id="@+id/txt_ship_cost"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="20dp"
                    android:textColor="#ff0000"
                    android:textSize="13sp"
                    android:hyphenationFrequency="none" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="Số lượng sản phẩm: "
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:hyphenationFrequency="none" />
                    <TextView
                        android:id="@+id/txt_quantity_product"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:textColor="@android:color/black"
                        android:textSize="13sp"
                        android:hyphenationFrequency="none" />
                </LinearLayout>
                <!--<ImageView-->
                    <!--android:id="@+id/delete_item_order"-->
                    <!--android:layout_width="20dp"-->
                    <!--android:layout_height="20dp"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:padding="2dp"-->
                    <!--app:srcCompat="@drawable/trash" />-->
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>