<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout android:id="@+id/btn_change_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/border_bottom_item_profile">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:src="@drawable/change_pass"
                android:layout_width="40dp"
                android:padding="3dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đổi mật khẩu"
                android:paddingLeft="15dp"
                android:textColor="#333"
                android:textSize="14dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fa_angle_right"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:paddingTop="3dp"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/border_bottom_item_profile">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageView
                android:src="@drawable/icon_logout"
                android:layout_width="40dp"
                android:padding="3dp"
                android:layout_height="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:paddingLeft="15dp"
                android:textColor="#333"
                android:textSize="14dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fa_angle_right"
            android:layout_alignParentRight="true"
            android:textSize="20dp"
            android:paddingTop="3dp"/>
    </RelativeLayout>
</LinearLayout>
